---
const {
  headline,
  cards
} = Astro.props;
const gridColNo = cards?.items?.length;
---

<div class="justify-center items-center flex">
    <div class="flex flex-col justify-center items-center">
      {
        headline &&
        <div class="md:max-w-[600px] px-6">
          <h2 class="heading text-[24px] text-center mb-10">{headline}</h2>
        </div>
      }
      <div class="flex flex-wrap gap-10">
        {cards?.items?.map((card: any, index: number) => {
          return (
            <div class="bg-off-white p-8 flex items-center justify-center flex-col">
              <div class={"w-[140px] h-[140px] rounded-full bg-indigo items-center flex justify-center"}>
                <h5 class="heading text-[40px]" data-contentful-field-id="stat" data-contentful-entry-id={card?.sys?.id}>{card?.stat}</h5>
              </div>
              <div class="md:mt-6 mt-8 text-center">
                <h3 class="heading text-[24px]" data-contentful-field-id="heading" data-contentful-entry-id={card?.sys?.id}>{card?.heading}</h3>
                <p class="pt-2 font-inter text-[16px] font-normal  text-off-black">{card?.subheading}</p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>